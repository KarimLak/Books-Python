ns2:Book8a62fffd-9954-4ec1-ac94-537ee765592e a ns2:Book ;
    ns2:author "Rosemary McCarney" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=49237" ;
