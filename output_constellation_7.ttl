ns2:Book892467d0-e445-461e-962e-cbc5eb6400f8 a ns2:Book ;
    ns2:author "Michael Morpurgo" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=45659" ;
