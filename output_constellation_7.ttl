ns2:Book1a952453-c625-4736-9d36-1b4473ff987e a ns2:Book ;
    ns2:author "Cliff McNish" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=38814" ;
