ns2:Book324fe867-5eab-40d3-8a2b-f032c906a95a a ns2:Book ;
    ns2:author "Dorothée de Monfreid" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=46767" ;
