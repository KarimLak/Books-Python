ns2:Book297cefc1-628b-4707-a50d-870eab3ee14b a ns2:Book ;
    ns2:author "Geraldine McCaughrean" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=35213" ;
    ns2:datePublished "1998"^^xsd:gYear ;
