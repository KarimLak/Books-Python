ns1:Book6b6d8ae0-9759-48f8-aa16-bfdc0bee9b13 a ns1:Book ;
    ns1:author "Michael Morpurgo" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=19377" ;
