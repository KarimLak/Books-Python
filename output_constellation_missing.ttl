ns1:Book6694b6a9-01a9-4288-8842-9dbd388407c9 a ns1:Book ;
    ns1:author "Fred Bernard" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=38041" ;
