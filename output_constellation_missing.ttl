ns1:Book4207a325-3da0-4033-aaa5-c215a44ded58 a ns1:Book ;
    ns1:author "Michael Morpurgo" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=48803" ;
    ns1:datePublished "2010"^^xsd:gYear ;
