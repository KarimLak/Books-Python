ns1:Bookcb84fdea-a2d4-431b-b000-fc2079514866 a ns1:Book ;
    ns1:author "Carl Norac" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=48862" ;
