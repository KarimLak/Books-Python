ns1:Book680c5814-608f-41fe-8192-33325208e042 a ns1:Book ;
    ns1:author "Joan Grant" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=40716" ;
