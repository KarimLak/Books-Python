ns1:Book2d9163e9-e751-4e47-aca4-31ab674c58ad a ns1:Book ;
    ns1:author "Brian Selznick" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=51732" ;
