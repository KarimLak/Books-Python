ns1:Book24827565-4bdd-4df8-8ae5-a6c3007b6a97 a ns1:Book ;
    ns1:author "David McKee" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=47266" ;
