ns1:Bookbf80d995-d7f9-417c-ae55-6d5fb4f00d64 a ns1:Book ;
    ns1:author "Anthony Browne" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=40792" ;
