ns1:Book766db436-d6e8-4572-9bd7-874d04540b37 a ns1:Book ;
    ns1:author "David Merveille" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=43874" ;
