ns1:Book25b1ffc1-44d8-4808-bb81-381c149e4381 a ns1:Book ;
    ns1:author "Mary Denis d'après Shelley Deprez" ;
    pbs:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=35063" ;
