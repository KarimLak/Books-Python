ns2:Bookb20c44aa-81fa-414a-9f39-e14436d95350 a ns2:Book ;
    ns2:author "Jean-Marc d'après Anonyme Mathis" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=37065" ;
    ns2:datePublished "1100"^^xsd:gYear ;
