ns2:Book2ff53be3-7651-4882-aeed-973aca1f2290 a ns2:Book ;
    ns2:author "Astrid Lindgren" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=47930" ;
