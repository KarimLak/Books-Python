ns2:Book14891074-133d-425c-a0df-8b51526b4a9a a ns2:Book ;
    ns2:author "Alice Leader" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=43785" ;
    ns2:datePublished "2004"^^xsd:gYear ;
