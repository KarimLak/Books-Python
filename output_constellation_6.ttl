ns2:Book980664b5-f535-4548-8b07-bdb95d529d64 a ns2:Book ;
    ns2:author "Amandine Marshall" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=29817" ;
    ns2:datePublished "2004"^^xsd:gYear ;
