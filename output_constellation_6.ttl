ns2:Book333d6ea8-c586-43ce-8924-881640e711f1 a ns2:Book ;
    ns2:author "Véronique Larin" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=19940" ;
