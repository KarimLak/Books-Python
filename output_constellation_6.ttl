ns2:Book2988626b-6ac6-4fbd-8efb-176f6e674b12 a ns2:Book ;
    ns2:author "Estelle Lépine" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=41386" ;
    ns2:datePublished "2009"^^xsd:gYear ;
