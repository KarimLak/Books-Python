ns2:Bookc232cb12-2c2a-47ab-a7da-a04054d41264 a ns2:Book ;
    ns2:author "Bénédicte Le Loarer" ;
    ns2:constellationLink "https://constellations.education.gouv.qc.ca/index.php?p=il&lo=54808" ;
